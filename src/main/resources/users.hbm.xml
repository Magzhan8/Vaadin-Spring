<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.vaadinspring.model.Users" table="users">
      <meta attribute="class-description">
         This class contains the users detail. 
      </meta>
      <id name="UserId" type="int" column="id">
         <generator class="assigned"/>
      </id>
      <property name="login" column="login" type="java.lang.String"/>
      <property name="password" column="password" type="java.lang.String"/>
      <property name="email" column="email" type="java.lang.String"/>
      <property name="role" column="role" type="java.lang.String"/>
      <property name="image" column="image" type="java.lang.String"/>
   </class>
</hibernate-mapping>